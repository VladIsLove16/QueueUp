<Page x:Class="QueueUp.ApointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QueueUp"
      mc:Ignorable="d" 
      d:DesignHeight="820" d:DesignWidth="480"
      Title="ApointmentList">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="LightBlue"/>
        </Grid.Background>

        <ListBox x:Name="StudentList" Margin="251,125,35,304" d:ItemsSource="{Binding Students}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate> 
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Page>
